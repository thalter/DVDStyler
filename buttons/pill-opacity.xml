<?xml version="1.0" encoding="utf-8"?>
	<!-- Created by Gustavo Rezende -->
	<!-- Changed by ecodrv -->
<button previewHighlighted="true">
	<title>Pill opacity</title>
	<svg width="150" height="35" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
		<defs>
			<linearGradient id="lg" x1=".5" y1="0" x2=".5" y2="1">
				<stop id="st1" offset="0%" stop-color="#000000" stop-opacity=".5"/>
				<stop id="st2" offset="30%" stop-color="#ffffff" stop-opacity=".5"/>
				<stop id="st3" offset="100%" stop-color="#000000" stop-opacity=".5"/>
			</linearGradient>
			<rect id="def_box" x="1%" y="1%" width="98%" height="98%" rx="10"/>
			<text id="text" transform="translate(0,0)" x="50%" y="50%" style="text-anchor:middle;dominant-baseline:middle;stroke-width:1;stroke-linejoin:round;">Text</text>
		</defs>
		<use xlink:href="#def_box" id="box" style="fill:#ff8000;stroke:#000000;stroke-width:2;"/>
		<use xlink:href="#def_box" style="fill:url(#lg);"/>
		<use xlink:href="#def_box" id="sel" style="fill:none;stroke:none;"/>
		<use xlink:href="#text" id="text_stroke" style="fill:none;stroke:#00000080;"/>
		<use xlink:href="#text" id="text_fill" style="fill:#000000;stroke:none;"/>
	</svg>
	<parameters>
		<parameter>
			<title>Button color</title>
			<name>box_color</name>
			<type>colour</type>
			<element>box</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Border colour</title>
			<name>box_border_colour</name>
			<type>colour</type>
			<element>box</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Border width</title>
			<name>box_border_width</name>
			<type>integer</type>
			<element>box</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Corner round</title>
			<name>box_rx</name>
			<type>integer</type>
			<element>def_box</element>
			<attribute>rx</attribute>
		</parameter>
		<parameter>
			<title>Selection colour</title>
			<name>selection_colour</name>
			<type>colour</type>
			<element>sel</element>
			<attribute>fill</attribute>
			<changeable/>
			<default-value>
				<highlighted>#ff000050</highlighted>
				<selected>#ffff0050</selected>
			</default-value>
		</parameter>
		<parameter>
			<title>Text</title>
			<name>text</name>
			<type>text</type>
			<element>text</element>
		</parameter>
		<parameter>
			<title>Text color</title>
			<name>text_fill_color</name>
			<type>colour</type>
			<element>text_fill</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Stroke color</title>
			<name>text_stroke_color</name>
			<type>colour</type>
			<element>text_stroke</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Stroke width</title>
			<name>text_stroke_width</name>
			<type>integer(0,30)</type>
			<element>text</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Text offset</title>
			<name>text_offset</name>
			<type>integer(-100,100)</type>
			<element>text</element>
			<attribute>transform#1</attribute>
		</parameter>
	</parameters>
	<init-parameter>text</init-parameter>
	<text-offset>6%</text-offset>
	<default-size>
		<width>150|text+12%</width>
		<height>35|text</height>
	</default-size>
	<min-size>
		<width>10|text+12%</width>
		<height>10|text</height>
	</min-size>
</button>
