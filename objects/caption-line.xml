<?xml version="1.0" encoding="utf-8"?>
	<!-- Created by ecodrv -->
<object>
	<title>Caption and line</title>
	<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
		<defs>
			<filter id="text_shadowFilter">
				<feGaussianBlur stdDeviation="2"/>
			</filter>
			<text id="text" transform="translate(0,0)" x="50%" y="50%" style="stroke-linejoin:round;text-anchor:middle;dominant-baseline:middle;font-size:36;stroke-width:4;">Text</text>
		</defs>
		<g id="g_skewx" transform="skewX(0)">
			<rect id="rect_fill" x="0%" y="0%" width="100%" height="100%" style="stroke-width:0;fill:#ffff0080;"/>
			<g id="g_line" style="stroke-width:4;stroke-linecap:round;">
				<line id="line_right" x1="100%" y1="0%" x2="100%" y2="100%" style="stroke:none;"/>
				<line id="line_left" x1="0%" y1="100%" x2="0%" y2="0%" style="stroke:none;"/>
				<line id="line_up" x1="0%" y1="0%" x2="100%" y2="0%" style="stroke:#ffff00;"/>
				<line id="line_down" x1="100%" y1="100%" x2="0%" y2="100%" style="stroke:#ffff00;"/>
			</g>
			<use id="text_shadow" xlink:href="#text_stroke" x="2" y="2" style="fill:none;filter:url(#text_shadowFilter);stroke:#000000;stroke-opacity:0.63;visibility:hidden;"/>
			<g id="g_text" style="fill:#00ff00;stroke:#00a000;">
				<use id="text_stroke" xlink:href="#text" style="fill:none;"/>
				<use id="text_fill" xlink:href="#text" style="stroke:none;"/>
			</g>
		</g>
	</svg>
	<parameters>
		<parameter>
			<title>Text</title>
			<name>text</name>
			<type>text</type>
			<element>text</element>
		</parameter>
		<parameter>
			<title>Text colour</title>
			<name>text_fill_colour</name>
			<type>colour</type>
			<element>g_text</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Stroke color</title>
			<name>text_stroke_colour</name>
			<type>colour</type>
			<element>g_text</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Stroke width</title>
			<name>text_stroke_width</name>
			<type>integer(0,30)</type>
			<element>text</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Text offset</title>
			<name>text_offset</name>
			<type>integer(-100,100)</type>
			<element>text</element>
			<attribute>transform#1</attribute>
		</parameter>
		<parameter>
			<title>Shadow</title>
			<name>text_shadow</name>
			<type>shadow</type>
			<element>text_shadow</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Background colour</title>
			<name>rect_fill_colour</name>
			<type>colour</type>
			<element>rect_fill</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Line</title>
			<name>line_up_colour</name>
			<type>colour</type>
			<element>line_up</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Line</title>
			<name>line_down_colour</name>
			<type>colour</type>
			<element>line_down</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Line</title>
			<name>line_left_colour</name>
			<type>colour</type>
			<element>line_left</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Line</title>
			<name>line_right_colour</name>
			<type>colour</type>
			<element>line_right</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Line width</title>
			<name>line_width</name>
			<type>integer(0,30)</type>
			<element>g_line</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Skew X</title>
			<name>skew_x</name>
			<type>integer(-45,45)</type>
			<element>g_skewx</element>
			<attribute>transform#1</attribute>
		</parameter>
	</parameters>
	<init-parameter>text</init-parameter>
	<text-offset>2%</text-offset>
	<default-size>
		<width>8|text+20</width>
		<height>8|text+20</height>
	</default-size>
	<min-size>
		<width>3|text</width>
		<height>3|text</height>
	</min-size>
</object>
